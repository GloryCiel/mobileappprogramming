<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsTest">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_fragment"
            android:name="com.naver.maps.map.MapFragment" />

        <Button
            android:id="@+id/load_gpx_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load GPX"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/clear_gpx_button" />

        <Button
            android:id="@+id/clear_gpx_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear path"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/load_gpx_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>